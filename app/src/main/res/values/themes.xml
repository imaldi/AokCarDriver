<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AokCarDriver" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="fontFamily">@font/poppins</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="roundedCornersImageView8" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8sdp</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurface">@color/red</item>
        <item name="colorOnSurface">@color/red</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
<!--        <item name="colorControlActivated">#8BC34A</item>-->
        <item name="android:colorControlActivated">#9CCA23</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="FullscreenDialogTheme" parent="Base.Theme.AppCompat.DialogWhenLarge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/yellow_dark</item>
        <item name="colorControlActivated">@color/yellow_dark</item>
    </style>
</resources>